<Application x:Class="Blaze.App" x:Name="BlazeApp"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Blaze"
             xmlns:converters="clr-namespace:Blaze.Converters"
             Startup="Application_Startup">

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/BixelTheme;component/DarkTheme.xaml"/>
                <ResourceDictionary Source="Resources/Images.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <converters:StringValue x:Key="StringValue"/>
            <converters:ToDuration x:Key="ToDuration"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
